{
  "name": "@onoal/ledger-core",
  "version": "0.1.0",
  "description": "Core ledger engine for building custom Onoal ledgers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    },
    "./internal": {
      "import": "./dist/internal/index.js",
      "types": "./dist/internal/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/index.js",
      "types": "./dist/schema/index.d.ts"
    },
    "./routes": {
      "import": "./dist/routes/index.js",
      "types": "./dist/routes/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "onoal",
    "ledger",
    "core",
    "immutable",
    "hash-chain",
    "proof"
  ],
  "author": "Onoal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onoal/onoal-os.git",
    "directory": "ledger/framework"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.3.3",
    "@onoal/core": "workspace:*",
    "@onoal/ledger-database-sqlite": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "drizzle-orm": "^0.29.0",
    "jose": "^5.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}
