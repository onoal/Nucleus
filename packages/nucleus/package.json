{
  "name": "@onoal/nucleus",
  "version": "0.1.1-beta",
  "description": "Minimal ledger system for OID-based verifiable records",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./storage-sqlite": {
      "types": "./dist/storage-sqlite/index.d.ts",
      "import": "./dist/storage-sqlite/index.js",
      "require": "./dist/storage-sqlite/index.js",
      "default": "./dist/storage-sqlite/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build:wasm": "cd ../nucleus-core-rs && ./build.sh",
    "build:ts": "tsc",
    "build": "pnpm run build:wasm && pnpm run build:ts",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "npx eslint src --ext .ts",
    "clean": "rm -rf dist src/wasm"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "@onoal/oid-core": "^0.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "@onoal/oid-core": "^0.1.0"
  },
  "keywords": [
    "ledger",
    "oid",
    "verifiable",
    "append-only",
    "blockchain",
    "identity",
    "cryptographic",
    "proof",
    "attestation",
    "decentralized"
  ],
  "author": "ONOAL",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onoal/nucleus.git",
    "directory": "packages/nucleus"
  },
  "bugs": {
    "url": "https://github.com/onoal/nucleus/issues"
  },
  "homepage": "https://github.com/onoal/nucleus#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
